{
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{access_key}}",
    "secret_key": "{{secret_key}}",
    "region": "{{region}}",
    "source_ami": "{{source_ami}}",
    "instance_type": "{{instance_type}}",
    "ssh_username": "ec2-user",
    "ami_name": "platform-hvm-{{timestamp}}",
    "ssh_keypair_name":"{{keypair_name}}",
    "ssh_private_key_file": "{{ private_key_file }}",
    "associate_public_ip_address": true,
    "vpc_id": "{{vpc_id}}",
    "subnet_id": "{{subnet_id}}",
    "user_data_file": "{{provisioners_file}}",
    "iam_instance_profile": "{{instance_profile}}"
  }],
  "provisioners": [
  {
    "type": "file",
    "source": "provisioners/files/auth",
    "destination": "/tmp"
  },
  {
   "type": "shell",
   "inline": [
     "sleep 900"
   ]
   }]
}